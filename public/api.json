{
    "openapi": "3.0.2",
    "info": {
	"version": "1.0",
	"title": "Sample text"
    },
    "components": {
	"securitySchemes": {
	    "tokenAuthn": {
		"type": "apiKey",
		"name": "token",
		"in": "query",
		"description": "132 bit base64 string recieved from /get_token needed for all authenticated endpoints"
	    }
	}
    },
    "paths": {
	"/listFormTemplates": {
	    "get": {
		"x-mojo-to": "doc#getTypeList",
		"operationId": "getTemplates",
		"summary": "Get a metadata object for every template available",
		"responses": {
		    "200": {
			"description": "Success",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"templates": {
					    "type": "array"
					}
				    }
				}
			    }
			}
		    }
		}
	    }
	},
	"/health/{worker}": {
		"get": {
		    "x-mojo-to": "meta#health",
		    "operationId": "getHealthOf",
		    "summary": "Get health of a specifc worker",
		    "responses": {
			"200": {
			    "description": "It's a smiley face",
			    "content": {
				"application/json": {
				    "schema": {
					"properties": {
					    "face": {
						"type": "string"
					    }
					}
				    }
				}
			    }
			}
		    }
		}
	    },
	    "/entity": {
		"post": {
		    "x-mojo-to": "person#info",
		    "operationId": "getInfo",
		    "security": [{"tokenAuthn": []}],
		    "summary": "Gets metadata related to the person",
		    "responses": {
			"200": {
			    "description": "Get name parts, rank, and who user has permissions to.",
			    "content": {
				"application/json": {
				    "schema": {
					"properties": {
					    "name": {
						"type": "array"
					    },
					    "rank": {
						"type": "string"
					    },
					    "subordinates": {
						"type": "object"
					    },
					    "documents": {
						"type": "array"
					    }
					}
				    }
				}
			    }
			},
			"418": {
			    "description": "Unsuccessful login",
			    "content": {
				"application/json": {
				    "schema": {
					"properties": {
					    "reason": {
						"type": "string"
					    }
					}
				    }
				}
			    }
			}
		    }
		}				
	    },
	    "/entity/sub": {
		"post": {
		    "x-mojo-to": "person#infoOfSubordinate",
		    "operationId": "getSubInfo",
		    "security": [{"tokenAuthn": []}],
		"summary": "Gets metadata related to the person",
		    "responses": {
			"200": {
			    "description": "Get data on a subordinate",
			    "content": {
				"application/json": {
				    "schema": {
					"properties": {
					    "name": {
						"type": "array"
					    }
					}
				    }
				}
			    }
			},
			"418": {
			    "description": "Unsuccessful login",
			    "content": {
				"application/json": {
				    "schema": {
					"properties": {
					    "reason": {
						"type": "string"
					    }
					}
				    }
				}
			    }
			}
		    }
		}				
	    },
	    "/health": {
		"get": {
		    "x-mojo-to": "meta#health",
		    "operationId": "hello",
		    "summary": "Get a smiley face",
		    "responses": {
			"200": {
			    "description": "It's a smiley face",
			    "content": {
				"application/json": {
				    "schema": {
					"properties": {
					    "face": {
						"type": "string"
					    }
					}
				    }
				}
			    }
			}
		    }
		}
	    },
	    "/get_token": {
		"post": {
		    "x-mojo-to": "person#login",
		    "operationId": "getToken",
		    "requestBody": {
			"required": true,
			"content": {
			    "application/x-www-form-urlencoded": {
				"schema": {
				    "properties": {
				    "pass": {
					"type": "string",
					"minLength": 6
				    }
				},
				"required": [ "pass" ]
			    }
			}
		    }
		},
		"summary": "Try to get a session token using username/password pair",
		"responses": {
		    "200": {
			"description": "Successful login",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"token": {
					    "type": "string"
					}
				    }
				}
			    }
			}
		    },
		    "418": {
			"description": "Unsuccessful login",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"reason": {
					    "type": "string"
					}
				    }
				}
			    }
			}
		    }
		}
	    }
	},
	"/check_token": {
	    "post": {
		"x-mojo-to": "person#check",
		"operationId": "getIsValid",
		"security": [{"tokenAuthn": []}],
		"summary": "Verify that a token is presently valid.",
		"responses": {
		    "200": {
			"description": "Non-zero value indicates failure reason",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"code": {
					    "type": "integer"
					}
				    }
				}
			    }
			}
		    },
		    "418": {
			"description": "Unsuccessful login",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"reason": {
					    "type": "string"
					}
				    }
				}
			    }
			}
		    }	   
		}
	    }
	}
    },
    "servers": [
	{
	    "url": "/api"
	}
    ]
}
