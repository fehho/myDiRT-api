{
    "openapi": "3.0.2",
    "info": {
	"version": "1.0",
	"title": "Sample text"
    },
    "paths": {
	"/hello": {
            "get": {
		"x-mojo-to": "hello#world",
		"operationId": "hello",
		"summary": "Get a smiley face",
		"responses": {
		    "200": {
			"description": "It's a smiley face",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"face": {
					    "type": "string"
					}
				    }
				}
			    }
			}
		    }
		}
	    }
	},
	"/get_token": {
	    "post": {
		"x-mojo-to": "auth#login",
		"operationId": "getToken",
		"summary": "Try to get a session token using username/password pair",
		"responses": {
		    "200": {
			"description": "Successful login",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"token": {
					    "type": "string"
					}
				    }
				}
			    }
			}
		    },
		    "418": {
			"description": "Unsuccessful login",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"reason": {
					    "type": "string"
					}
				    }
				}
			    }
			}
		    }
		}
	    }
	},
	"/check_token": {
	    "post": {
		"x-mojo-to": "auth#check",
		"operationId": "checkToken",
		"summary": "Verify that a token is presently valid.",
		"responses": {
		    "200": {
			"description": "Non-zero value indicates failure reason",
			"content": {
			    "application/json": {
				"schema": {
				    "properties": {
					"code": {
					    "type": "string"
					}
				    }
				}
			    }
			}
		    }
		}
	    }
	}
    },
    "servers": [
	{
	    "url": "/api"
	}
    ]
}
			
                  
